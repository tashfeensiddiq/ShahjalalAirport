<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484848"
    tools:context="com.app.nerd.shahjalalairport.activites.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeView"
        app:cardBackgroundColor="#2F2F2F"
        app:cardElevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:alpha="0.8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/airplane"
                android:id="@+id/imageView"
                android:layout_gravity="center" />

            <TextView
                android:layout_margin="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/welcome_to_shahjalal_airport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#FFF"
                android:gravity="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_below="@+id/welcomeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="35dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_map"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Google Map"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_flight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Flight Schedule"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_hotel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Hotels Nearby"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_airlines"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Airlines"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_ambulance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Nearby Ambulance"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_restaurant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Nearby Restaurant"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_police"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Police Station"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_bank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Nearby Bank"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_director"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Director Info"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_luggage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Luggage and Wrapping"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_magistrate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="Magistrate Info"
                android:textColor="#FFF" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="#9F7949"
                android:padding="12dp"
                android:text="About"
                android:textColor="#FFF" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
